<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    android:layout_gravity="center_vertical"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
     <TextView
        android:id="@+id/ip_text1"
        style="@android:style/TextAppearance.Widget.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ip_edit_text"
        android:layout_alignParentTop="true"
        android:text="WallPaper Duration" 
        android:paddingBottom="20dp"/>
     <TextView
        android:id="@+id/ip_text2"
        style="@android:style/TextAppearance.Widget.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:text="(in mins)" 
        android:textSize="10sp"
        android:layout_alignBottom="@id/ip_text1"
        android:layout_toRightOf="@id/ip_text1"
         android:paddingBottom="20dp"/>

    <EditText
        android:id="@+id/ip_edit_text"
        style="@android:style/Widget.EditText"
        android:text="60"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_below="@id/ip_text2"
         />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ip_edit_text"
        android:layout_centerHorizontal="true"
        android:text="Done" 
        android:textColor="#FF7F27"
        android:layout_margin="10dp"
        />

</RelativeLayout>